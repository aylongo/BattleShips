<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.project_battleships">
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_battleships"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_battleships_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.project_battleships.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.project_battleships.LoggedMainActivity" />
        <activity android:name="com.example.project_battleships.PlaceShipsActivity" />
        <activity android:name="com.example.project_battleships.ComputerTurnActivity" />
        <activity android:name="com.example.project_battleships.PlayerTurnActivity" />
        <activity android:name="com.example.project_battleships.LoginActivity" />
        <activity android:name="com.example.project_battleships.RegisterActivity" />
        <activity android:name="com.example.project_battleships.LeaderboardActivity"/>
        <service android:name="com.example.project_battleships.PlayService" />
    </application>

</manifest>